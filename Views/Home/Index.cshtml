@{
    ViewData["Title"] = "Home Page";
    
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <div class="row">
       @foreach (var item in Model)
       {
            <div class="card m-2" style="width: 18rem;">
            <img src="~/attractie.webp" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">@item.Naam</h5>
                <p id="info" class="card-text">Angst Factor: @item.AngstFactor</p>
                <input id="attractieId" type="text" value="@item.Id" hidden>
                <a href="/kaart/Details/@item.Id" class="btn btn-primary">Info</a>
            </div>
        </div>
       }
    </div>
</div>



